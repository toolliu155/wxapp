.item-header {
  padding: 20rpx;
  background-color: lightgray;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.item-header view {
  margin-left: 20rpx;
}
.cell {
  width: 360rpx;
  border: 1px solid gray;
  box-shadow: 0 0 3px gray;
  border-radius: 8rpx;
  margin-top: 10rpx;
}
.cell image {
  width: 100%;
  height: 260rpx;
}
.cell > view {
  padding: 10rpx;
}
.cell > view > view {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cell > view > view:first-of-type {
  font-size: 0.9em;
}
.cell > view > view:nth-of-type(2) {
  font-size: 0.7em;
  color: gray;
  margin: 8rpx 0;
}
.cell > view > view:nth-of-type(3) {
  color: red;
}
.btn-gotop {
  position: fixed;
  bottom: 120rpx;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 25px;
  background-color: rgba(0, 0, 155, 0.5);
}

